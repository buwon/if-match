{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "importHelpers": false,
    "allowJs": true,
    "sourceMap": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "baseUrl": ".",
    "rootDir": "./src/",
    "paths": {
      "@/*":  ["src/*"],
    },
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modues",
  ]
}
